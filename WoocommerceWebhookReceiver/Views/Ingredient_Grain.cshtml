@model PdfOrders.Repositories.Models.Order

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grain Label</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
            line-height: 1.5;
            max-width: 300px;
            margin: 0 auto;
            padding: 20px;
        }

        .logo {
            max-width: 25%;
            height: auto;
            display: block;
            margin: 0 auto 10px;
        }

        .label {
            text-align: center;
            border: 1px solid #000;
            padding: 10px;
        }

        .packed-for {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .grain-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .grain-detail {
            display: flex;
            justify-content: space-between;
            font-weight: bold;
        }

        .grain-detail div {
            width: 48%;
            text-align: center;
        }
    </style>
</head>
<body>
    <img src="https://kegthat.com/wp-content/uploads/2020/05/cropped-keg-that.jpg" alt="Logo" class="logo">
<div class="label">
    <div class="packed-for">Packed for: Customer Name</div>
    <div class="grain-title">Grain Title</div>
    <div class="grain-detail">
        <div>Grain Weight: 0 kg</div>
        <div>Grain EBC: 0</div>
    </div>
</div>
</body>
</html>